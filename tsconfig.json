{
  "compilerOptions": {
    "module": "es6",
    "target": "ES6",
    "jsx": "react",
    "declaration": true,
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "./src/dist",
    "listEmittedFiles": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/modules/**/*",
  ]
}
